{
  "emulators": {
    "hosting": {
      "port": 5000,
      "host": "0.0.0.0"
    }
  },
  "functions": {
    "source": "functions",
    "predeploy": ["npm run build --prefix functions"]
  },
  "hosting": [
    {
      "target": "app-dev",
      "public": "ui/web-build",
      "predeploy": ["npm run build --prefix ui"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "api-dev",
      "rewrites": [
        {
          "source": "**",
          "function": "api"
        }
      ]
    },
    {
      "target": "api-docs",
      "public": "functions/docs",
      "predeploy": ["npm run docs --prefix functions"],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "cleanUrls": "true",
      "ignore": ["**/.*", "**/node_modules/**"],
      "trailingSlash": false
    },
    {
      "target": "site",
      "public": "site"
    }
  ]
}
