rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false
    }
    match /chats/{chatId} {
      allow read, write: if auth() && uid() in resource.data.members;
      match /messages/{messageId} {
        allow read, write: if uid() in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
      }
    }
    match /users/{uid} {
      allow read, write: if auth() && uid() == resource.id;
    }
    match /vendors/{uid} {
      allow read: if true;
      allow write: if auth() && uid() == resource.id;
    }

  }
}

function auth() {
  return request.auth != null;
}

function uid() {
  return request.auth.uid;
}
